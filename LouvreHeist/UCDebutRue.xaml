<UserControl x:Name="UCRue" x:Class="LouvreHeist.UCDebutRue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LouvreHeist"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid x:Name="grilleDebutRue" >
        <Image Margin="0,0,0,0" Source="/images/louvredehors.jpg" Stretch="Fill"/>
        <Rectangle x:Name="rectangleDialogue1" HorizontalAlignment="Left" Height="75" Margin="27,355,0,0" Stroke="White" VerticalAlignment="Top" Width="739" Fill="White" RenderTransformOrigin="0.5,0.5" RadiusX="23.601" RadiusY="23.601" >
            <Rectangle.Effect>
                <DropShadowEffect/>
            </Rectangle.Effect>
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Label x:Name="labDialoguePresentation" Content="Salut ! Moi c'est Justin. Je serais ton acolyte durant ce casse !" Margin="40,374,-40,2" FontSize="20" FontFamily="Impact"/>
        <Label Content="Justin" HorizontalAlignment="Left" Margin="40,355,0,0" VerticalAlignment="Top" Height="37" Width="53" FontSize="14" FontWeight="Bold"/>
    </Grid>
</UserControl>
