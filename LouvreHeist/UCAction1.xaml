<UserControl x:Class="LouvreHeist.UCAction1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LouvreHeist"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Margin="0,0,0,0" Source="/images/louvredehors.jpg" Stretch="Fill"/>
        <Rectangle x:Name="rectangleDialogue1" HorizontalAlignment="Left" Height="75" Margin="27,355,0,0" Stroke="White" VerticalAlignment="Top" Width="739" Fill="White" RenderTransformOrigin="0.5,0.5" RadiusX="23.601" RadiusY="23.601" >
            <Rectangle.Effect>
                <DropShadowEffect/>
            </Rectangle.Effect>
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>

        <Label x:Name="labDialogue1" Content="Depechons-nous... Je peux désactiver les caméras sur ma tablette, tu as bien le mot" HorizontalAlignment="Center" Margin="0,375,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Impact" Height="65" Width="706"/>
        <Label x:Name="labDialogue2" Content="de passe, comme c'était prévu ?" HorizontalAlignment="Center" Margin="0,397,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Impact" Height="65" Width="706"/>
        <Label Content="Justin" HorizontalAlignment="Left" Margin="40,355,0,0" VerticalAlignment="Top" Height="37" Width="53" FontSize="14" FontWeight="Bold"/>
    </Grid>
</UserControl>
