<UserControl x:Class="LouvreHeist.UCDemarrage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LouvreHeist"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image x:Name="titreJeu" Margin="30,39,10,182" Source="/images/TheLouvreHeist.png" Stretch="Fill"/>
        <Button x:Name="butStart"  Click="butStart_Click" Margin="0,200,0,0" Width="340" Height="86">
            <Image Height="86" Source="/images/start menu.png" Stretch="Fill" Width="340"/>
        </Button>
        
        <Label x:Name="desc" Content="Sauras-tu voler les bijoux de la couronne?"  Foreground="White" FontFamily="Comic Sans MS" Height="86" Width="326" HorizontalAlignment="Center"  FontWeight="Bold" BorderThickness="10,10,10,10" FontSize="14" Margin="0,0,0,0" VerticalAlignment="Center"/>
        
    </Grid>
</UserControl>
