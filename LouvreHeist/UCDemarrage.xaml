<UserControl x:Class="LouvreHeist.UCDemarrage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LouvreHeist"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <Image x:Name="fondDemarrage" Height="450" Source="/images/demarrage.png" Stretch="Fill" Width="800"/>
        <Button x:Name="butStart" Canvas.Left="225" Canvas.Top="290" Click="butStart_Click">
            <Image Height="86" Source="/images/start menu.png" Stretch="Fill" Width="340"/>
        </Button>
        <Image x:Name="diamantDroite" Height="43" Canvas.Left="488" Source="/images/diamant.png" Stretch="Fill" Canvas.Top="55" Width="48" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="13.164"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image x:Name="diamantGauche" Height="44" Canvas.Left="194" Source="/images/diamant.png" Stretch="Fill" Canvas.Top="70" Width="51" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-23.714"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

    </Canvas>
</UserControl>
