<UserControl x:Class="LouvreHeist.UCPerd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LouvreHeist"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/GameOver.png"/>
        </Grid.Background>


        <Button x:Name="butRejouer" Content="Rejouer" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="100"   Click="butRejouer_Click" Background="White" Margin="200,0,0,0"/>
        <Button x:Name="butQuitter" Content="Quitter" HorizontalAlignment="Right" VerticalAlignment="Center" Height="30" Width="100"  Click="butQuitter_Click" Background="White" Margin="0,0,200,0"/>
    </Grid>
</UserControl>
