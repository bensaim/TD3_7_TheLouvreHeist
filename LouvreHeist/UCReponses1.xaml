<UserControl x:Class="LouvreHeist.UCReponses1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LouvreHeist"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <Image Margin="0,0,0,0" Source="/images/louvredehors.jpg" Stretch="Fill" Height="450" Width="800"/>
        <Rectangle x:Name="rectangleDialogue1" HorizontalAlignment="Left" Height="75" Stroke="White" VerticalAlignment="Top" Width="740" Fill="White" RenderTransformOrigin="0.5,0.5" RadiusX="23.601" RadiusY="23.601" Canvas.Left="23" Canvas.Top="21" >
            <Rectangle.Effect>
                <DropShadowEffect/>
            </Rectangle.Effect>
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>

        <Label x:Name="labDialogue1" Content="Depechons-nous... Je peux désactiver les caméras sur ma tablette, tu as bien le mot" HorizontalAlignment="Left" Margin="40,31,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Impact" Height="65" Width="706"/>
        <Label x:Name="labDialogue2" Content="de passe, comme c'était prévu ?" HorizontalAlignment="Left" Margin="40,59,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Impact" Height="65" Width="706"/>
        <Label x:Name="labelQuestion1" Content="Justin" HorizontalAlignment="Left" Margin="40,17,0,0" VerticalAlignment="Top" Height="37" Width="53" FontSize="14" FontWeight="Bold"/>
        <Button x:Name="butRep1" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="128" Canvas.Top="165"/>
        <Button x:Name="butRep2" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="596" Canvas.Top="330"/>
        <Button x:Name="butRep3" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="128" Canvas.Top="330"/>
        <Button x:Name="butRep4" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="596" Canvas.Top="165"/>

    </Canvas>
</UserControl>
