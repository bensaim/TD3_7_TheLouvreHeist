<UserControl x:Class="LouvreHeist.UCJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LouvreHeist"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas x:Name="canvasJeu" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MouseLeftButtonDown="canvasJeu_MouseLeftButtonDown"
        >

        <!-- Fond 1 -->
        <Image x:Name="imgFond1" Source="/images/courseLouvre.png"
           Stretch="Fill"
           Width="{Binding ActualWidth, ElementName=canvasJeu}"
           Height="341"
           Canvas.Left="0" Canvas.Top="0"/>

        <!-- Fond 2 (pour enchaînement) -->
        <Image x:Name="imgFond2" Source="/images/courseLouvre.png"
           Stretch="Fill"
           
           Canvas.Left="{Binding ActualWidth, ElementName=canvasJeu}" Canvas.Top="0"/>

        <!-- Sol 1 -->
        <Image x:Name="imgSol1" Source="/images/bordureTrottoir.png"
           Stretch="Fill"
           
           Canvas.Top="341"
           Canvas.Left="0"/>

        <!-- Sol 2 -->
        <Image x:Name="imgSol2" Source="/images/bordureTrottoir.png"
           Stretch="Fill"
           Width="{Binding ActualWidth, ElementName=canvasJeu}"
           Height="109"
           Canvas.Top="341"
           Canvas.Left="{Binding ActualWidth, ElementName=canvasJeu}"/>

        <!-- Policier -->
        <Image x:Name="imgPolicier" Source="/images/policier.png"
           Stretch="Fill"
           Width="201" Height="298"
           Canvas.Left="495" Canvas.Top="149"/>

        <!-- Justin -->
        <Image x:Name="imgJustinJeu" Source="/images/JustinJeu1.png"
           Stretch="Fill"
           Width="200" Height="215"
           Canvas.Left="86" Canvas.Top="225" HorizontalAlignment="Center" VerticalAlignment="Top"
           />
    </Canvas>

</UserControl>
