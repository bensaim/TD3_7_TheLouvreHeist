<UserControl x:Class="LouvreHeist.UCTenue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LouvreHeist"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <RadioButton x:Name="tenue1" Canvas.Left="540" Canvas.Top="140" >
            <Image Height="100" Source="/images/tutu.jpg"  Width="100"/>
        </RadioButton>
        <RadioButton x:Name="tenue2" Canvas.Left="170" Canvas.Top="140">
            <Image Height="100" Source="/images/tenueworker.jpg" Width="100"/>
        </RadioButton>
        <RadioButton x:Name="tenue3" Canvas.Left="170" Canvas.Top="294">
            <Image Height="100" Source="/images/emo.png" Stretch="Fill" Width="100"/>
        </RadioButton>
        <RadioButton x:Name="tenue4" Canvas.Left="540" Canvas.Top="294">
            <Image Height="100" Source="/images/Magicball.jpg" Stretch="Fill" Width="100"/>
        </RadioButton>
        
        <Button x:Name="butValiderTenue" Content="VALIDER" Canvas.Left="380" Canvas.Top="251" Click="butValiderTenue_Click"/>


        <Rectangle x:Name="rectangleDialogue1" HorizontalAlignment="Left" Height="75" Stroke="White" VerticalAlignment="Top" Width="740" Fill="White" RenderTransformOrigin="0.5,0.5" RadiusX="23.601" RadiusY="23.601" Canvas.Left="34" Canvas.Top="10" >
            <Rectangle.Effect>
                <DropShadowEffect/>
            </Rectangle.Effect>
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Label x:Name="labDialoguePresentation" Content="Choisi la tenue pour votre équipe afin de passer incognitos !" FontSize="20" FontFamily="Impact" Canvas.Left="150" Canvas.Top="30"/>

    </Canvas>
</UserControl>
