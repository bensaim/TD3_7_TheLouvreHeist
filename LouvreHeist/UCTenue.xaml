<UserControl x:Class="LouvreHeist.UCTenue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LouvreHeist"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <RadioButton x:Name="tenue1" Margin="100, 0, 0, 50" Width="170" Height="150" HorizontalAlignment="Left" Tag="1" Click="Tenue_Clicked"> 
            <Image Height="150" Source="/images/tutu.jpg"  Width="170" />
        </RadioButton>
        <RadioButton x:Name="tenue2" Margin = "0, 0, 100, 50" Width="170" Height="150" HorizontalAlignment="Right" Tag="2" Click="Tenue_Clicked">
            <Image Height="150" Source="/images/tenueworker.jpg" Width="170"/>
        </RadioButton>

        <RadioButton x:Name="tenue3" Margin =" 100, 294, 50, 0" Width="170" Height="150" HorizontalAlignment="Left" Tag="3" Click="Tenue_Clicked"> 
            <Image Height="150" Source="/images/emo.png" Stretch="Fill" Width="170"/>
        </RadioButton>

        <RadioButton x:Name="tenue4" Margin= "0, 294, 100, 0" Width="170" Height="150" HorizontalAlignment="Right" Tag="4" Click="Tenue_Clicked"> 
            <Image Source="/images/panneau.png" Stretch="Fill" Width="150" Height="150"/>
        </RadioButton>

        <Button x:Name="butValiderTenue" Content="VALIDER" Width="100" Height="100" Click="butValiderTenue_Click" IsEnabled="False" Margin="0,40,0,0" Background="White"/>

        <Viewbox Stretch="Uniform">
            <Rectangle x:Name="rectangleDialogue1" HorizontalAlignment="Center" Height="75" Stroke="White" VerticalAlignment="Top" Width="740" Fill="White" RenderTransformOrigin="0.5,0.5" RadiusX="23.601" RadiusY="23.601" Margin="0,0,0,350" >
                <Rectangle.Effect>
                    <DropShadowEffect/>
                </Rectangle.Effect>
            </Rectangle>
        </Viewbox>
        <Label x:Name="labDialoguePresentation" FontSize="20" FontFamily="Impact" Margin="0,50,0,0" Width="500" Height="50" VerticalAlignment="Top"/>

       
    </Grid>
</UserControl>
