<UserControl x:Class="LouvreHeist.UCDialogue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LouvreHeist"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" MouseDown="UserControl_MouseDown">
    <Grid x:Name="grilleDebutRue" >
        <Image Margin="0,0,0,0" Source="/images/louvredehors.jpg" Stretch="Fill"/>
        <Viewbox Stretch="Uniform">
            <Rectangle x:Name="rectangleDialogue1" Height="75" Stroke="White" Width="740" Fill="White"  RadiusX="23.601" RadiusY="23.601" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,330,0,0" >
                <Rectangle.Effect>
                    <DropShadowEffect/>
                </Rectangle.Effect>
            </Rectangle>
        </Viewbox>
        <Label x:Name="labDialoguePresentation" Margin="0,0,0,30" FontSize="20" FontFamily="Impact" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <Label Content="Justin" Margin="40,0,0,50" FontSize="14" FontWeight="Bold" Height="36" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="53"/>
        <Button x:Name="butSuite"  HorizontalAlignment="Right" Margin="0,0,102,110" VerticalAlignment="Bottom" Click="butSuite_Click" />
        <Image x:Name="imgJustinDialogue" Margin="259,84,259,110" Source="/images/JustinDialogue1.png" Stretch="Fill" Height="256" Width="282" MinHeight="100" MinWidth="100"/>

    </Grid>
</UserControl>
